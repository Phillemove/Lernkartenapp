<Window x:Class="De.HsFlensburg.ClientApp101.Ui.Desktop.CategoryManage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De.HsFlensburg.ClientApp101.Ui.Desktop"
        mc:Ignorable="d"
        Title="Kategorien verwalten" Height="417" Width="533"
        x:Name="ThisWindow">
    <Window.Resources>

    </Window.Resources>
    <!--
    <Window.IsEnabled>
        <Binding Source="{StaticResource MessageListener}" Path="BindableProperty"></Binding>
    </Window.IsEnabled>
    -->
    <Window.DataContext>
        <Binding Source="{StaticResource VMLocator}" Path="CategoryManageViewModel"></Binding>
    </Window.DataContext>
    <Grid>
        <Label Content="Kategorien verwalten" Margin="0,0,250,0" />

        <Button Command="{Binding CloseWindow}" CommandParameter="{Binding ElementName=ThisWindow}" Content="Fenster schließen" Margin="357,332,15,10"/>
        <DataGrid ItemsSource="{Binding Path=MyCategoryCollection, Mode=OneWay}" HorizontalAlignment="Left" Height="283" Margin="10,33,0,0" VerticalAlignment="Top" Width="500" RenderTransformOrigin="0.491,0.519"/>

    </Grid>
</Window>
